<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="Пример редактирования TextView"
        android:textColor="#163C9C"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:fontFamily="sans-serif-condensed"
        android:hint="Пример текста EditText"
        android:inputType="number"
        android:minEms="8"
        android:padding="20dp"
        android:textColor="#54BA1D"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Push the button"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переключатель"
        android:textStyle="bold"
        android:layout_marginVertical="16dp"
        android:textColor="#ED061D"
        android:layout_gravity="end"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Жирный"
        android:textColor="#F87"
        android:textSize="32sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="35sp"
        android:textColor="#BC7A18"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Курсив"
        tools:ignore="HardcodedText" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:padding="16dp"
        android:textOn="Включить"
        android:textSize="20sp"
        android:textOff="Выключить"
        android:background="@color/purple_200"
        tools:ignore="HardcodedText" />

</LinearLayout>